<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:padding="@dimen/basicPaddingSize"
    >


    <com.anlaiye.swt.justtalkapp.widget.ClearEditText
        android:id="@+id/etxtEmail"
        style="@style/editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/icon_reg_name"
        android:drawablePadding="10dp"
        android:hint="@string/hint_login_email"/>


    <com.anlaiye.swt.justtalkapp.widget.ClearEditText
        android:id="@+id/etxtPwd"
        style="@style/editText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/icon_reg_password"
        android:drawablePadding="10dp"
        android:hint="@string/hint_login_pwd"
        android:inputType="textPassword"/>


    <Button
        android:id="@+id/btnLogin"
        style="@style/bigGreenButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="login"
        android:text="@string/login"/>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="使用菜鸟窝账号登陆，如无账号，请到网站上注册：http://www.cniao5.com"/>

</LinearLayout>